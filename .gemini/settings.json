{
  "mcpServers": {
    "archivos": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "/mnt/c/Users/carlo/portfolio"
      ]
    },
    "laravel": {
      "command": "php",
      "args": [
        "artisan",
        "mcp:serve",
        "-q"
      ]
    },
    "github": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-github"
      ]
    },
    "notebooklm": {
      "command": "npx",
      "args": [
        "notebooklm-mcp@latest"
      ]
    },
    "perplexity": {
      "command": "npx",
      "args": [
        "@perplexity-ai/mcp-server"
      ]
    },
    "cloudflare": {
      "command": "uvx",
      "args": [
        "--from",
        "cloudflare-mcp-server",
        "cloudflare-mcp-server"
      ]
    }
  }
}